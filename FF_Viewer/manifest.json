{
  "name": "FF Image Viewer",
  "description": "Grab the slideshow of FF photos and open them in a new tab.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "scripting", "activeTab", "tabs"
  ],
  "host_permissions": ["https://www.furnishedfinder.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.furnishedfinder.com/property/*"],
      "js": ["popup.js"]
    }
  ],
  "action": {
    "default_title": "FF Image Viewer",
    "default_icon": "image-viewer.png",
    "default_popup": "popup.html"
  }  
}
